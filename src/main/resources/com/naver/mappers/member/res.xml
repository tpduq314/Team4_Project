<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Res">

	 <insert id="res_in">
		insert into res (res_code, res_count01, res_count02, res_count03,res_start_date,res_end_date,res_airport,res_hotel,res_total_price,res_date,res_req,mem_id,pack_code)
		values(#{res_code},#{res_count01},#{res_count02},#{res_count03},#{res_start_date},#{res_end_date},#{res_airport},#{res_hotel},#{res_total_price},sysdate,null,#{mem_id},#{pack_code})
	</insert>
	
    <select id="res_cont" resultType="res">
     select * from res where res_code=#{res_code}
    </select>
    
    <update id="res_update" parameterType="res">
     update res set res_count01=#{res_count01},res_count02=#{res_count02},res_count03=#{res_count03},
     res_req=#{res_req},res_total_price=#{res_total_price}
     where res_code=#{res_code}
    </update>
</mapper>
 